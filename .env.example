# Ejemplo de configuración de variables de entorno para el frontend
# Copiar este archivo como .env y configurar los valores reales

# ===================================
# CONFIGURACIÓN DE API
# ===================================

# URL del backend (API)
VITE_API_URL=http://localhost:5000/api

# Timeout para peticiones HTTP (en milisegundos)
VITE_API_TIMEOUT=10000

# ===================================
# CONFIGURACIÓN DE APLICACIÓN
# ===================================

# Nombre de la aplicación
VITE_APP_NAME=Priming

# Versión de la aplicación
VITE_APP_VERSION=1.0.0

# Ambiente (development, staging, production)
VITE_ENV=development

# ===================================
# CONFIGURACIÓN DE STORAGE
# ===================================

# Prefijo para keys de localStorage
VITE_STORAGE_PREFIX=priming_

# Tiempo máximo de cache (en milisegundos)
# Default: 1 hora = 3600000 ms
VITE_CACHE_MAX_AGE=3600000

# ===================================
# CONFIGURACIÓN DE JUEGOS
# ===================================

# Puntaje inicial por defecto
VITE_DEFAULT_SCORE=200

# Tiempo máximo por nivel (segundos)
VITE_DEFAULT_TIME_LIMIT=180

# Número de niveles por dificultad
VITE_LEVELS_FACIL=10
VITE_LEVELS_MEDIO=5
VITE_LEVELS_DIFICIL=5

# ===================================
# CONFIGURACIÓN DE SESIÓN
# ===================================

# Tiempo máximo de sesión inactiva (ms)
# Default: 30 minutos = 1800000 ms
VITE_SESSION_TIMEOUT=1800000

# Tiempo de expiración de estado guardado (ms)
# Default: 4 horas = 14400000 ms
VITE_STATE_MAX_AGE=14400000

# ===================================
# CONFIGURACIÓN DE UI
# ===================================

# Mostrar tooltips
VITE_SHOW_TOOLTIPS=true

# Habilitar animaciones
VITE_ENABLE_ANIMATIONS=true

# Tema (light, dark)
VITE_THEME=light

# ===================================
# CONFIGURACIÓN DE DESARROLLO
# ===================================

# Mostrar logs en consola
VITE_ENABLE_LOGGING=true

# Mostrar datos de ejemplo en caso de error
VITE_ENABLE_MOCK_DATA=false

# Nivel de logs (error, warn, info, debug)
VITE_LOG_LEVEL=debug

# ===================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===================================

# URL del CDN para assets (opcional)
# VITE_CDN_URL=https://cdn.ejemplo.com

# Habilitar analytics (opcional)
# VITE_ENABLE_ANALYTICS=false

# ID de Google Analytics (opcional)
# VITE_GA_ID=UA-XXXXXXXXX-X

# ===================================
# NOTAS IMPORTANTES
# ===================================
#
# 1. Este archivo NO debe ser commiteado al repositorio
#    Está incluido en .gitignore
#
# 2. Todas las variables deben empezar con VITE_
#    para ser accesibles en el código
#
# 3. Acceder a las variables con:
#    import.meta.env.VITE_API_URL
#
# 4. En producción, configurar estas variables en el
#    servicio de hosting (Vercel, Netlify, etc.)
#
# 5. Reiniciar el servidor de desarrollo después de
#    cambiar variables de entorno
#
